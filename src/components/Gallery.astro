---
const images = [
  { src: '/images/event-2.jpg',  alt: 'LDN GWWC Meetup group photo',                        span: 'lg:col-span-2' },
  { src: '/images/event-11.jpg', alt: 'Group social at a bar',                               span: 'lg:col-span-1' },
  { src: '/images/event-1.jpg',  alt: 'Community members gathering in a London park',        span: 'lg:col-span-1' },
  { src: '/images/event-10.jpg', alt: 'Talk on earning to give',                             span: 'lg:col-span-2' },
  { src: '/images/event-8.jpg',  alt: 'Speaker presenting at a GWWC London event',          span: 'lg:col-span-1' },
  { src: '/images/event-9.jpg',  alt: 'Member receiving a Pledge to Give certificate',      span: 'lg:col-span-1' },
  { src: '/images/event-3.jpg',  alt: 'LEGC picnic social in the park',                     span: 'lg:col-span-1' },
  { src: '/images/event-12.jpg', alt: 'EA London quarterly review co-working session',      span: 'lg:col-span-2' },
  { src: '/images/event-4.jpg',  alt: 'Social gathering at Newspeak House',                 span: 'lg:col-span-2' },
  { src: '/images/event-6.jpg',  alt: 'Monthly social at a London pub',                     span: 'lg:col-span-1' },
  { src: '/images/event-5.jpg',  alt: 'Community dinner at a London restaurant',            span: 'lg:col-span-1' },
  { src: '/images/event-13.jpg', alt: 'Talk on founding and funding effective charities',   span: 'lg:col-span-1' },
  { src: '/images/event-14.jpg', alt: 'GWWC themed event presentation',                     span: 'lg:col-span-2' },
];
---

<section id="gallery" class="py-24 sm:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-5 sm:px-8 lg:px-12">
    <div class="text-center max-w-2xl mx-auto">
      <h2 class="font-display text-4xl sm:text-5xl text-slate-900 leading-tight">
        Past Events
      </h2>
    </div>

    <div class="mt-14 grid grid-cols-1 lg:grid-cols-3 gap-4">
      {images.map((image) => (
        <div class:list={["group relative overflow-hidden rounded-2xl", image.span]}>
          <div class="aspect-[16/10] overflow-hidden">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
              loading="lazy"
            />
          </div>
          <!-- Subtle overlay on hover -->
          <div class="absolute inset-0 bg-gradient-to-t from-primary-950/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </div>
      ))}
    </div>
  </div>
</section>
