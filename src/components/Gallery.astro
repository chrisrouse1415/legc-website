---
const images = [
  { src: '/images/event-2.jpg',  alt: 'LDN GWWC Meetup group photo' },
  { src: '/images/event-11.jpg', alt: 'Group social at a bar' },
  { src: '/images/event-1.jpg',  alt: 'Community members gathering in a London park' },
  { src: '/images/event-10.jpg', alt: 'Talk on earning to give' },
  { src: '/images/event-8.jpg',  alt: 'Speaker presenting at a GWWC London event' },
  { src: '/images/event-9.jpg',  alt: 'Member receiving a Pledge to Give certificate' },
  { src: '/images/event-3.jpg',  alt: 'LEGC picnic social in the park' },
  { src: '/images/event-12.jpg', alt: 'EA London quarterly review co-working session' },
  { src: '/images/event-4.jpg',  alt: 'Social gathering at Newspeak House' },
  { src: '/images/event-6.jpg',  alt: 'Monthly social at a London pub' },
  { src: '/images/event-5.jpg',  alt: 'Community dinner at a London restaurant' },
  { src: '/images/event-13.jpg', alt: 'Talk on founding and funding effective charities' },
  { src: '/images/event-14.jpg', alt: 'GWWC themed event presentation' },
];
---

<section id="gallery" class="py-24 sm:py-32 bg-white">
  <div class="max-w-7xl mx-auto px-5 sm:px-8 lg:px-12">

    <h2 class="font-display text-4xl sm:text-5xl text-slate-900 leading-tight text-center mb-12">
      Past Events
    </h2>

    <div class="masonry">
      {images.map((image) => (
        <div class="masonry-item group">
          <div class="relative overflow-hidden rounded-2xl shadow-sm">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-auto block transition-transform duration-500 ease-out group-hover:scale-[1.03]"
              loading="lazy"
            />
            <!-- Caption slides up on hover -->
            <div class="caption-overlay absolute inset-x-0 bottom-0 px-4 py-4
                        bg-gradient-to-t from-black/75 via-black/40 to-transparent
                        translate-y-full group-hover:translate-y-0
                        transition-transform duration-300 ease-out rounded-b-2xl">
              <p class="text-white text-sm font-medium leading-snug tracking-wide">
                {image.alt}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>

<style>
  .masonry {
    columns: 2;
    column-gap: 0.75rem;
  }

  @media (min-width: 640px) {
    .masonry { columns: 2; column-gap: 1rem; }
  }

  @media (min-width: 1024px) {
    .masonry { columns: 3; column-gap: 1.25rem; }
  }

  .masonry-item {
    break-inside: avoid;
    margin-bottom: 0.75rem;
  }

  @media (min-width: 640px) {
    .masonry-item { margin-bottom: 1rem; }
  }

  @media (min-width: 1024px) {
    .masonry-item { margin-bottom: 1.25rem; }
  }

  /* Clip the caption within the rounded image container */
  .masonry-item .relative {
    overflow: hidden;
  }
</style>
