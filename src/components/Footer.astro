---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { label: 'Twitter / X', href: '#', icon: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z' },
  { label: 'LinkedIn', href: '#', icon: 'M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z' },
];

const footerLinks = [
  { href: '#about', label: 'About' },
  { href: '#how-it-works', label: 'How It Works' },
  { href: '#events', label: 'Events' },
  { href: '#gallery', label: 'Gallery' },
];
---

<footer class="bg-primary-950 text-slate-300">
  <div class="max-w-7xl mx-auto px-5 sm:px-8 lg:px-12 py-16">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10">
      <!-- Brand -->
      <div class="sm:col-span-2 lg:col-span-2">
        <a href="#" class="inline-flex items-center gap-3">
          <img src="/images/logo.png" alt="" class="w-8 h-8 rounded-sm" />
          <span class="text-lg font-bold text-white">LEGC</span>
        </a>
        <p class="mt-4 text-slate-400 leading-relaxed max-w-sm">
          The London Effective Giving Community. Helping each other give well, together.
        </p>
      </div>

      <!-- Links -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider">Navigate</h3>
        <ul class="mt-4 space-y-3">
          {footerLinks.map((link) => (
            <li>
              <a href={link.href} class="text-slate-400 hover:text-white transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social -->
      <div>
        <h3 class="text-sm font-semibold text-white uppercase tracking-wider">Connect</h3>
        <div class="mt-4 flex items-center gap-3">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              class="p-2.5 rounded-xl bg-white/5 hover:bg-white/10 text-slate-400 hover:text-white transition-all duration-200"
              aria-label={link.label}
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d={link.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-white/10 text-center text-sm text-slate-500">
      &copy; {currentYear} London Effective Giving Community. All rights reserved.
    </div>
  </div>
</footer>
